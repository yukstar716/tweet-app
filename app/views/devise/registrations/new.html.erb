<div class="card devise-card">
  <div class="card-body">
    <div class="devise-wrapper">
      <p class="devise-text">アカウント作成</p>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.text_field :username, autoforcus: true, placeholder: "ユーザーネーム", class: "form-control col-md-6" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, autoforcus: true, placeholder: "メールアドレス", class: "form-control col-md-6" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autoforcus: true, placeholder: "パスワード", class: "form-control col-md-6" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autoforcus: "off", placeholder: "パスワードの確認", class: "form-control col-md-6" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary devise-btn" %>
        </div>
      <% end %>

      <div class="devise-link">
        <%= link_to "ログインはこちら", new_user_session_path %>
      </div>
    </div>
  </div>
</div>